            android:theme="@style/AppTheme"
            android:layout_height="70dp" android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="24dp" android:layout_marginStart="0dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:id="@+id/closebtn"
                    android:layout_marginLeft="5dp"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:src="@drawable/bb"
                    android:scaleType="centerCrop" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"/>

        </RelativeLayout>


    </android.support.v7.widget.Toolbar>



