<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                tools:context=".Activities.HotelRegistration">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:orientation="vertical">

    <ImageView
            android:layout_width="178dp"
            android:layout_height="191dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:src="@drawable/travel2"/>

    <EditText
            android:id="@+id/hname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Habitación"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="#D3D3D3" />


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

    <EditText
            android:id="@+id/hrooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Camas"

            android:inputType="number"
            android:maxLength="2"
            android:textColor="@color/black"
            android:textColorHint="#D3D3D3" />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

    <EditText
            android:id="@+id/hrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Calificación"

            android:inputType="number"
            android:textColor="@color/black"
            android:textColorHint="#D3D3D3" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

    <EditText
            android:id="@+id/hlocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="#00000000"
            android:fontFamily="@font/roboto_light"
            android:hint="Loc"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="#D3D3D3" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="9dp"
            android:background="#b9b9b9" />

    <Button
            android:id="@+id/hsave"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/rect_grayoutline"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:padding="20dp"
            android:text="Guardar"
            android:textColor="@color/black"
            android:textSize="15.4sp" />


</LinearLayout>

</RelativeLayout>